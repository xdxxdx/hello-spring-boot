<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
   <!-- <properties resource="config.properties"/>-->

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>
       <!--配置tk.mybatis插件-->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>
      		
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/coffee?serverTimezone=UTC"
                        userId="root"
                        password="wonyen@1602">
        </jdbcConnection>
        <!--配置实体类的存放位置-->
        <javaModelGenerator targetPackage="com.xdx.hello.spring.boot.entity" targetProject="src/main/java"/>
        <!--配置xml文件的存放位置-->
        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources"/>
        <!--配置dao的存放路径-->
        <javaClientGenerator targetPackage="com.xdx.hello.spring.boot.dao" targetProject="src/main/java" type="XMLMAPPER" />
        <!--配置需要生成的表，%代表所有的表-->
        <table tableName="t_admin" domainObjectName="TAdmin">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>